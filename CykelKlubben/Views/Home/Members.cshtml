@{
    ViewData["Title"] = "Medlemmer";
}
@model List<AppUser>; 
<div class="container">

    <div class="text-center">
        <h1 class="display-4">@ViewData["Title"]</h1>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <div>
            <table class="table">
                <tr>
                    <td>Fornavn</td>
                    <td>Efternavn</td>
                    <td>Brugernavn</td>
                    <td>Profil billede</td>
                </tr>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.FirstName</td>
                        <td>@u.LastName</td>
                        <td>@u.NormalizedUserName</td>
                        <td><img style="width:30px;height:30px; object-fit:cover;" src="data:image/*;base64,@(Convert.ToBase64String(u.ProfilePicture))" /></td>
                    </tr>
                }

            </table>
        </div>
    }
    else
    {
        <div>
            <p>Login for at se klubbens medlemmer</p>
        </div>
    }
</div>
