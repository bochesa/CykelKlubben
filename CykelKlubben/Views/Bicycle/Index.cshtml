
@model List<Bicycle>

<div class="container">
    <h1 class="display-4">Se Dine cykler her</h1>
    
    <div class="row">
        <div class="col-md-12">
            @if (Model.Count == 0)
            {
                <div>
                    <p>Du har ikke nogen cykler, opret en her!</p>
                    <a class="btn btn-primary" asp-action="CreateBicycle" asp-controller="Bicycle">Ny Cykel
                    </a>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-3">
                            <a class="btn btn-secondary"
                               asp-action="Bicycle"
                               asp-controller="Bicycle"
                               asp-route-id="@item.Id">
                                @item.Model
                                @if (item.Picture == null)
                                {
                                    <img width="200" height="200" src="">
                                }
                                else
                                {
                                <img width="200" height="200" src="data:image/*;base64,@(Convert.ToBase64String(item.Picture))">
                                }
                            </a>
                        </div>
                    }

                </div>
                <div class="row">
                    <a class="btn btn-primary float-right" asp-action="CreateBicycle" asp-controller="Bicycle">Ny Cykel</a>
                </div>

            }
        </div>
    </div>
</div>